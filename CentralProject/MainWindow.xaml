<Window x:Class="Coursework_2.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:h="clr-namespace:Coursework_2"
	Title="MainWindow"
	x:Name="CentralProjectMainWindow"
>
	<DockPanel>
		<Menu DockPanel.Dock="Top">
			<MenuItem Header="File"></MenuItem>
			<MenuItem Header="View"></MenuItem>
			<MenuItem Header="Edit">
				<MenuItem Header="Add Shape" x:Name="AddShapeMenuItem"></MenuItem>
				<ToolBarPanel HorizontalAlignment="Left" Height="18" VerticalAlignment="Top" Width="58"/>
			</MenuItem>
			<MenuItem Header="Help"></MenuItem>
		</Menu>
		<ScrollViewer HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible">
			<Canvas Width="1000" Height="1000" x:Name="Canvas">
			</Canvas>
		</ScrollViewer>
	</DockPanel>
</Window>

